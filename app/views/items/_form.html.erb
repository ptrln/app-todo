<%= form_for([@project, @item], :html => {class: "form-horizontal"}) do |f| %>
<div class="control-group <%= "error" unless @item.errors[:title].empty? %>">
<%= f.label :title, class: "control-label" %>
<div class='controls'>
<%= f.text_field :title %>
<span class="help-inline"><%= @item.errors[:title].join(", ") %></span>
</div>
</div>
<div class="control-group">
<%= f.label :project, class: "control-label" %>
<div class='controls'>
<%= f.collection_select(:project_id, @projects, :id, :title) %>
</div>
</div>
<div class="control-group">
<%= f.label :desc, "Description", class: "control-label" %>
<div class='controls'>
<%= f.text_area :desc, class: "span8", rows: 5 %>
</div>
</div>
<div class="control-group">
  <div class='controls'>
<%= f.submit :class => "btn" %>
</div>
</div>
<% end %>