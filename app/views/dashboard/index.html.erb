<%= breadcrumb_helper([]) %>
<legend>
  <h1>At a glance...</h1>
</legend>

<div class="row-fluid" style='text-align:center;'>
  <div class="span4">
    <legend>
      <%= link_to("Projects", projects_path) %>
    </legend>
    <table class="table table-striped table-bordered table-hover">
      <% @projects.each do |project| %>
      <tr>
        <td style='text-align:center;' onclick='window.location = "<%= project_path(project) %>"'>
          <%= link_to(project.title, project_path(project)) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="span4">
    <legend>
      <%= link_to("Teams", teams_path) %>
    </legend>
    <table class="table table-striped table-bordered table-hover  ">
      <% @teams.each do |team| %>
      <tr>
        <td style='text-align:center;' onclick='window.location = "<%= team_path(team) %>"'>
          <%= link_to(team.name, team_path(team)) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="span4">
    <legend>
      <%= link_to("Users", users_path) %>
    </legend>
    <table class="table table-striped table-bordered table-hover  ">
      <% @users.each do |user| %>
      <tr>
        <td style='text-align:center;' onclick='window.location = "<%= user_path(user) %>"'>
          <%= link_to(user.name, user_path(user)) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
